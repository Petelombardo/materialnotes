# Google OAuth
GOOGLE_CLIENT_ID=my-id
GOOGLE_CLIENT_SECRET=my-secret
GOOGLE_CALLBACK_URL=http://localhost:3002/auth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_CALLBACK_URL=http://localhost:3002/auth/microsoft/callback

# App Settings
JWT_SECRET=your_jwt_secret_key
NODE_ENV=production

# Single Port Configuration - ALL traffic goes through this port
PORT=3002

# Backend Internal Port (used by Docker containers internally)
BACKEND_PORT=3001

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_CORS_ORIGINS=http://localhost:3002,https://my-app-url.com
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# Production Settings
# When deploying, update these URLs to match your domain
# GOOGLE_CALLBACK_URL=https://notes.thelombardos.com/auth/google/callback
# MICROSOFT_CALLBACK_URL=https://notes.thelombardos.com/auth/microsoft/callback
# WEBSOCKET_CORS_ORIGINS=https://notes.thelombardos.com

